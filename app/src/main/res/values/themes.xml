<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MADU_Project" parent="Theme.AppCompat">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="buttonStyle">@style/greenButtonStyle</item>
        <item name="android:editTextColor">@color/black</item>
    </style>

    <style name="greenButtonStyle" parent="Theme.MADU_Project">
        <item name="background">@drawable/botonverde</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/diary</item>
    </style>
</resources>