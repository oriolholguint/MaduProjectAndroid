<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentBotones">

    <FrameLayout
        android:id="@+id/frLContenedorFragments"
        android:layout_width="match_parent"
        android:layout_height="550dp"
        android:layout_marginStart="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/btnAtras"
        android:layout_width="187dp"
        android:layout_height="43dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="550dp"
        android:background="@drawable/botonverde"
        android:fontFamily="@font/diary"
        android:text="@string/atras"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnSiguienteCentro"
        android:layout_width="187dp"
        android:layout_height="43dp"
        android:layout_marginStart="272dp"
        android:layout_marginTop="550dp"
        android:background="@drawable/botonverde"
        android:fontFamily="@font/diary"
        android:text="@string/siguiente"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/btnAtras"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnSiguiente"
        android:layout_width="187dp"
        android:layout_height="43dp"
        android:layout_marginStart="272dp"
        android:layout_marginTop="550dp"
        android:background="@drawable/botonverde"
        android:fontFamily="@font/diary"
        android:text="@string/siguiente"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/btnSiguienteCentro"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/grpBotones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="btnAtras,btnSiguiente"
        android:visibility="invisible"/>

</androidx.constraintlayout.widget.ConstraintLayout>