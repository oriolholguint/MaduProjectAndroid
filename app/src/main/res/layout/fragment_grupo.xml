<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pergamino_liso"
    >


    <TextView
        android:id="@+id/lblUri"
        android:layout_width="196dp"
        android:layout_height="41dp"
        android:layout_marginTop="36dp"
        android:fontFamily="@font/diary"
        android:gravity="center_horizontal"
        android:text="URI OLGUIN"
        android:textColor="@color/black"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.375"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgBitmogiDavid" />

    <TextView
        android:id="@+id/lblAlberto"
        android:layout_width="178dp"
        android:layout_height="81dp"
        android:layout_marginTop="36dp"
        android:fontFamily="@font/diary"
        android:gravity="center_horizontal"
        android:text="ALBERTO DO SANTOS"
        android:textColor="@color/black"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.898"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgBitmogiDavid" />

    <TextView
        android:id="@+id/lblMarti"
        android:layout_width="160dp"
        android:layout_height="71dp"
        android:layout_marginTop="36dp"
        android:fontFamily="@font/diary"
        android:gravity="center_horizontal"
        android:text="MARTI PALAZON"
        android:textColor="@color/black"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.644"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgBitmogiDavid" />

    <ImageView
        android:id="@+id/imgBitmogiAlberto"
        android:layout_width="156dp"
        android:layout_height="139dp"
        android:layout_marginTop="164dp"
        android:scaleType="fitXY"
        android:src="@drawable/fondojuego"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.888"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lblGrupoMadu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:fontFamily="@font/diary"
        android:text="GRUPO MADU"
        android:textColor="@color/black"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgBitmogiDavid"
        android:layout_width="156dp"
        android:layout_height="139dp"
        android:layout_marginTop="164dp"
        android:background="@drawable/dave"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.126"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgBitmogiUri"
        android:layout_width="156dp"
        android:layout_height="139dp"
        android:layout_marginTop="164dp"
        android:background="@drawable/fondojuego"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.377"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgBitmogiMarti"
        android:layout_width="156dp"
        android:layout_height="139dp"
        android:layout_marginTop="164dp"
        android:background="@drawable/marti"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.636"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lblDavid"
        android:layout_width="196dp"
        android:layout_height="41dp"
        android:layout_marginTop="36dp"
        android:fontFamily="@font/diary"
        android:gravity="center_horizontal"
        android:text="DAVID MUR"
        android:textColor="@color/black"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.106"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgBitmogiDavid" />

</androidx.constraintlayout.widget.ConstraintLayout>