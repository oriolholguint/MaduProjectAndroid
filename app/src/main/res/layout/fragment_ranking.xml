<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".ranking.FragmentRanking">

    <TextView
        android:id="@+id/textViewRanking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/diary"
        android:text="Ranking"
        android:textSize="50dp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/opcionesSpinner"/>

    <LinearLayout
        android:id="@+id/opcionesSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/textViewRanking"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/containterPartidas"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/spinnerGenero"
            android:layout_width="150dp"
            android:layout_height="60dp"/>

        <Spinner
            android:id="@+id/spinnerDificultad"
            android:layout_width="150dp"
            android:layout_height="60dp"/>


    </LinearLayout>

    <FrameLayout
        android:id="@+id/containterPartidas"
        android:layout_width="500dp"
        android:layout_height="300dp"
        android:paddingTop="30dp"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:paddingBottom="30dp"
        app:layout_constraintTop_toBottomOf="@id/opcionesSpinner"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnAtrasRanking"
        android:background="@drawable/ranking"
        android:scaleType="centerCrop">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/listaPartidas"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/rankingError"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:fontFamily="@font/diary"
            android:layout_gravity="center"
            android:text="@string/ranking_resultado_no_encontrado"/>

    </FrameLayout>

    <Button
        android:id="@+id/btnAtrasRanking"
        android:layout_width="207dp"
        android:layout_height="61dp"
        android:layout_gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/containterPartidas"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="100dp"
        android:fontFamily="@font/diary"
        android:text="Volver al menu"
        android:textColor="@color/white"/>

</androidx.constraintlayout.widget.ConstraintLayout>