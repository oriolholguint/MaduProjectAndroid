<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Texto de pregunta -->
    <TextView
        android:id="@+id/txtPreguntaLenguaje"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/diary"
        android:textColor="@color/white"
        android:text="Escoge un idioma/Choose a language"
        android:textSize="@dimen/tam_idioma_titulo"
        app:layout_constraintBottom_toTopOf="@id/listaIdiomas"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- Lista de opciones de idiomas -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/listaIdiomas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:overScrollMode="never"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtPreguntaLenguaje"/>

</androidx.constraintlayout.widget.ConstraintLayout>