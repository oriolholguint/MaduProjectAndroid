<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="20dp">

    <ImageView
        android:id="@+id/imagen_introduccion"
        android:layout_width="350dp"
        android:layout_height="170dp"
        android:layout_marginBottom="30dp"/>

    <TextView
        android:id="@+id/titulo_introduccion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:textSize="@dimen/tam_introduccion_titulo"
        android:fontFamily="@font/diary"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:text="@string/titulo_introduccion_1"
        style="@style/shadoweffect_introduccion"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/descripcion_introduccion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/diary"
        android:textColor="@color/black"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:textSize="@dimen/tam_introduccion_descripcion"
        android:text="@string/introduccion_1"
        style="@style/shadoweffect_introduccion"
        android:textAlignment="center"/>

</LinearLayout>